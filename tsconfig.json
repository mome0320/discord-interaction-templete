{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "target": "es2020",
    "alwaysStrict": true,
    "strict": true,
    "incremental": true,
    "declaration": true,
    "preserveConstEnums": true,
    "newLine": "lf",
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules","build"]
}
